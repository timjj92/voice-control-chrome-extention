{
  "name": "TT Extension",
  "version": "1.0",
  "description": "Speech to Command Extension!",
  "permissions": ["storage", "activeTab", "<all_urls>", "tabs"],
  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["helper.js"    ]
  }],
  "background": {
      "page": "popup.html",
      "persistent": false
  },
  "browser_action": {
      "default_icon": "Images/Logo.png",
      "default_title": "Transcript"
  },
  "manifest_version": 2
}



    
